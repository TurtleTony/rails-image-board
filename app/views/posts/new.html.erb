<% @title = "Upload" %>

<%= form_for @post, url: {action: "create"}, html: {class: "text-primary"} do |f| %>
  <div class="form-group">
    <%= f.label :resource, "Select an image" %>
    <%= f.file_field :resource, class: "form-control-file" %>
  </div>
  <%= f.label :resource, "Select a filter option for your post" %>
  <div class="form-group">
    <div class="form-check">
      <%= f.radio_button :filter, :open, class: "form-check-input" %>
      <%= f.label :filter_open, "Visible to everyone", class: "form-check-label" %>
    </div>
    <div class="form-check">
      <%= f.radio_button :filter, :internal, class: "form-check-input" %>
      <%= f.label :filter_internal, "Visible to registered users only", class: "form-check-label" %>
    </div>
    <div class="form-check">
      <%= f.radio_button :filter, :anything, class: "form-check-input" %>
      <%= f.label :filter_anything, "Visible to registered users with 'anything' filter enabled", class: "form-check-label" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tag_list, "Enter tags (seperated by ',')" %>
    <%= f.text_field :tag_list, class: "form-control bg-gray text-light" %>
  </div>
  <%= f.submit "Create", class: "btn btn-danger" %>
<% end %>