<% @title="Post" %>

<div class="text-center position-relative">
  <%= image_tag @post.resource, class: "img-fluid" %>
  <%= link_to(@post.resource, class: "position-absolute enhance-link p-3", target: "_blank") do icon('fas', 'search-plus', class: "fa-2x") end %>
</div>
<span class="text-light">Posted <%= render 'created_identifier', post: @post %> by <%= render 'users/user_link', user: @post.user %></span>
<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"} if user_signed_in? if @deletable %>
<div class="mt-3 text-light">
  <h4><%= @post.comments.size %> Comments</h4>

  <%= form_for :comment, url: {controller: "comments",action: "create"}, html: {class: "nifty_form"} do |f| %>
    <p><%= f.text_area :message, class: "text-light bg-dark border-light"%></p>
    <%= f.hidden_field :post_id, value: @post.id %>
    <%= f.hidden_field :comment_id, value: nil %>
    <%= f.submit "Create", class: "btn btn-danger"%>
  <% end %>
  <div class="mt-3">
  <%= render 'comments/index', comments: @post.comments.where(comment_id: nil) %>
  </div>
</div>